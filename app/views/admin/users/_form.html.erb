<% if user.errors.present? %>
<ul style="list-style: none;" class="alert alert-danger">
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<div class="px-5">
    <%= form_with model: [:admin, user], local: true do |f| %>
    <div class="form-group">
        <i class="fa fa-address-book"></i> <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <i class="fas fa-envelope"></i> <%= f.label :mail, 'メールアドレス' %>
        <%= f.text_field :mail, class: 'form-control' %>
    </div>
    <div class="form-group">
        <i class="fa fa-key" aria-hidden="true"></i> <%= f.label :password, 'パスワード' %>
        <%= f.text_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
        <i class="fa fa-key" aria-hidden="true"></i> <%= f.label :password_confirmation, 'パスワード(確認用)' %>
        <%= f.text_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="pt-3 pb-5">
        <%= f.submit '登録する', class: 'btn btn-warning cw' %>
        <% end %>
    </div>
</div>